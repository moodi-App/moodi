{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true, 
    "lib": ["dom", "es6"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*", "env.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
     "esm": true,
  }
}